<div class="container">
  <h1 class="title text-center my-5">URL Shortener</h1>
  <div class="jumbotron">
    <div class="image-container">
      <div class="image"></div>
    </div>
  </div>
  <div class="form-container my-5">
    <h2 class="subtitle text-center">
      Success! Please use this link:
      <a href="{{ urlData.shorterUrl }}" id='target_txt'>{{ urlData.shorterUrl }}</a>
    </h2>
    <div class="btn-container d-flex justify-content-center my-3">
      <button class="btn btn-primary" type="btn" id="copyBtn" onClick="copyTxt()"
        data-clipboard-target="#shorterUrl">Copy</button>
    </div>
    <script>new Clipboard("#Copy")</script>
  </div>
</div>